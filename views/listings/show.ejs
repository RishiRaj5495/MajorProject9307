
    <% layout("/layouts/boilerPlate") %> 
    
  <body>
     <!-- <h2> <%= show.title %></h2> -->

     <div class="card col-8 offset-2 listing-card" >
  <img src="<%= show.images.url %>" class="card-img-top" alt="show_image" style="height: 15rem;">
  <div class="card-body">
    <p class="card-text">




      
              <h3><%= show.title %> </h3>

            <%= show.owner.username %> <br
        
          <%= show.description %> <br>
          Price:&#8377 <%= show.price.toLocaleString("en-IN")%> /night <br>
          Location: <%= show.location %> <br>
          Country: <%= show.country %> <br>
            Coordinates: <%= show.geometry.coordinates %>
          <% if(currentUser && currentUser._id.equals(show.owner._id)){ %> 

                  
          <div class="row">
          <div class="col-2">
          <a href="/listings/<%= show._id %>/edit" class="btn btn-danger px-3 p-1">Edit</a><br>      </div> 
            <div class="col-3 ">
         <form action="/listings/<%= show._id %>?_method=DELETE" method="POST">
      <button type="submit" class="btn btn-primary p-1 px-3">Delete</button>
 </form>

 </div>
</div>



 <% } %>  </p>
 </div>
  </div>

<div class="col-8 offset-3 mb-3" >
<% if(currentUser){ %>
<h4> Leave a Review</h4>

<form action="/listings/<%= show._id %>/reviews" method="post" novalidate class="needs-validation">  

 
   
    <!-- <input type="range"  name="review[rating]" class="form-range" required> -->
  </div>
 <div class="mb-3 mt-3">
 <label for="rating" class="form-label">Rating</label>
<fieldset class="starability-slot">
   
 
  <input type="radio"  id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
  <input type="radio"  id="first-rate1" name="review[rating]" value="1" />
  <label for="first-rate1" title="Terrible">1 star</label>
  <input type="radio" id="first-rate2" name="review[rating]" value="2" />
  <label for="first-rate2" title="Not good">2 stars</label>
  <input type="radio"  id="first-rate3" name="review[rating]" value="3" />
  <label for="first-rate3" title="Average">3 stars</label>
  <input type="radio"  id="first-rate4" name="review[rating]" value="4" />
  <label for="first-rate4" title="Very good">4 stars</label>
  <input type="radio"  id="first-rate5" name="review[rating]" value="5" />
  <label for="first-rate5" title="Amazing">5 stars</label>
</fieldset>

</div>

  <div class="mb-3 mt-3">
<label for="comment" class="form-label">Comment</label>
<textarea name="review[comment]" id="comment" cols="30" rows="5" class="form-control" required></textarea>
 <div class="invalid-feedback">Add some comment for a review</div>
  <div class="valid-feedback">Looks Good!</div>


  </div>
  
   
  <div>
<button class="btn btn-outline-dark">Submit</button>
  </div>

</form>
<% } %>
<hr>
</div>
</div>

<% if(show.reviews.length > 0){ %>


<div class="row offset-2 " style=" display: flex;  flex-wrap: wrap;" >
 <h4>All reviews :</h4>
<% for(review of show.reviews) {%>
<div class="card col-5 ms-3 mb-3  "> 
<div class="card-body">
 <h5 class="card-title"><%= review.author.username %></h5>
  <p class="starability-result card-text" data-rating="<%= review.rating %>"></p>
 <p>Comment :<%= review.comment%> </p>

   
  </p>

</div>

<form method="post"
 action="/listings/<%= show._id %>/reviews/<%= review._id %>?_method=DELETE">
  <button class=" btn btn-dark p-1 ms-3 mb-3">Delete</button>
</form>
</div>


<% } %>
</div>


<% } %>



     




