 <% layout("/layouts/boilerPlate") %>
<body>

  <div class="row">
    <div class="col-8 offset-2">
<h3>Create New Listing</h3>

   <form action="/listings/accomodation" method="POST">

   <div class="mb-3">
    <label for="title" class="form-label">Title :</label>
    <input type="text" name="listing[title]" placeholder=" Enter Title" class="form-control" >
    </div>
    
    <div class="mb-3">
      <label for="description" class="form-label">Description :</label>
      <textarea type="text" name="listing[description]" placeholder=" Enter Description" class="form-control"></textarea>
    </div>
    
    <div class="col-4.5">
    <label for="location" class="form-label">Location :</label>
    <input type="text" name="listing[location]" placeholder=" Enter Location" class="form-control">
    </div>
    <div class="row">


    <div class="col-5">
    <label for="country" class="form-label">Country :</label>
    <input type="text" name="listing[country]" placeholder=" Enter Country" class="form-control">
    </div>


    <div class="col-5">
  
    <label for="price" class="form-label">Price :</label>
    <input type="number" name="listing[price]" placeholder=" Enter Price" class="form-control">
    </div>
  
    </div>
    <br>
    <button  class="btn btn-danger px-4 p-1"> Add</button>

   </form>
   </div>
  </div>

 
  







</body>
