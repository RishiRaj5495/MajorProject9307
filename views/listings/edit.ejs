 <% layout("/layouts/boilerPlate") %>
<body>

  <div class="row">
    
    <div class="col-8 offset-2">
  <h2>Edit your Listing</h2>
   <form  action ="/listings/<%= show._id %>?_method=PUT" method="POST">

    <div class="mb-3">
    <label for="title" class="form-label">Title :</label>
    <input type="text" name="listing[title]" value="<%= show.title %>" class="form-control" >
    </div>
    <div class="mb-3">
    <label for="description" class="form-label">Description :</label>
      <textarea type="text" name="listing[description]" class="form-control"><%= show.description %></textarea>
    </div>

   <div class="mb-3">
    <label for="images" class="form-label">Images :</label>
    <input type="text" name="listing[images]" value="<%= show.images %>" class="form-control">


   </div> 
   





    <div class="mb-3">
    <label for="location" class="form-label">Location :</label>
    <input type="text" name="listing[location]" value="<%= show.location %>" class="form-control">

    </div>

    
  <div class="row">
    <div class="mb-3 col-4">  
    <label for="price" class="form-label">Price :</label>
    <input type="number" name="listing[price]" value="<%= show.price %>"  class="form-control">
    </div>
  
    <div class="mb-3 col-8">
    <label for="country" class="form-label">Country :</label>
    <input type="text" name="listing[country]" value="<%= show.country %> "  class="form-control">
    </div>


    </div>
    <br>
    <button  class="btn btn-success p-1 px-3">Edit</button>


    
    
    </form>
    </div>
    </div>
</body>
